<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5">Log in</h1>

  <main> 
    <% if(flash.any?) %>
      <div class="message-container">
        <% flash.each do |name, message| %>
          <div class="message <%= name %>"><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <%= form_tag(sessions_path) do %>
      <div class="form-group row">
        <%= label(:email, nil, class: 'col-sm-2 col-form-label') %>
        <%= email_field_tag(:email, nil, class: 'form-control', placeholder: 'me@epfl.ch') %>
      </div>
      <div class="form-group row">
        <%= label(:password, nil, class: 'col-sm-2 col-form-label') %>
        <%= password_field_tag(:password, nil, class: 'form-control') %>
      </div>
      <div class="form-group row">
       <div class="col-sm-10 offset-sm-2">
         <%= submit_tag 'Log in', class: 'btn btn-primary btn-block' %>
       </div>
     </div>
    <% end %>
  </main>
</div>

